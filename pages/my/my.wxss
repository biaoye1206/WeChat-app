page {
  background-color: #efefef;
  display: block;
}

.head {
  height: 130px;
  color: #9dd3fa;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  background-color: #fff;
  margin: 10px 0px 0px 25px;
}
.user-set {
  margin-left: 12px;
  margin-top: 25px;
  color: #fff;
  display: flex;
  flex-direction: column;
}

.font-bolder {
  font-weight: bolder;
  font-size: 20px;
}

.login-setting {
  margin-top: 3px;
  width: 80px;
  font-size: 12px;
  border: 1px solid #9dd3fa;
  text-align: center;
  border-radius: 10px;
  background-color: #1e6eb2;
  color: #9dd3fa;
}