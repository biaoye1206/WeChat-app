<!--pages/vip/vip.wxml-->
<view class='user'>
<navigator url="/pages/my/phone/phone" style='height:180rpx;' hover-class='none' class='flex-row user-login'>
	<image wx:if="{{show == false}}" class='avatar' src='/image/portrait-1.png'></image>
	<image wx:else="{{show == true}}" class='avatar' src='{{userInfo.avatarUrl}}'></image>
	<view class='user-set'>
		<text class='user-name'>{{userInfo.nickName}}</text>
		<text class='user-manage' hover-class='none'>帐号管理 ></text>
	</view></navigator>
</view>
<view class='weui-cells' wx:if="{{show}}">
	<navigator class="weui-cell" url="/pages/my/order/order">
		<image src='/image/order-1.png' model="widthFix" />
		<view class="weui-cell__bd">订单详情</view>
		<view class="weui-cell__ft">></view>
	</navigator>
	<!-- <navigator class="weui-cell" url="pages/icon/icon">
   <view class="weui-cell__hd_in">
      <image src='/image/Integral.png' model="widthFix"/>
    </view>
    <view class="weui-cell__bd">积分明细</view>
    <view class="weui-cell__ft weui-cell__hd_in-select-after">></view>
  </navigator> -->
  <navigator class="weui-cell" url="/pages/my/recharge/recharge">
		<view class="weui-cell__hd_in">
			<image src='/image/top_up-1.png' model="widthFix" />
		</view>
		<view class="weui-cell__bd">余额充值</view>
		<view class="weui-cell__ft weui-cell__hd_in-select-after">></view>
	</navigator>
</view>
<view class='weui-cells'>
	<button open-type='feedback'><navigator class="weui-cell">
		<view class="weui-cell__hd_in">
			<image src='/image/opinion-1.png' model="widthFix" />
		</view>
		<view class="weui-cell__bd">意见反馈</view>
		<view class="weui-cell__ft weui-cell__hd_in-select-after">></view>
	</navigator></button>
	<navigator class="weui-cell" url="pages/icon/icon">
		<view class="weui-cell__hd_in">
			<image src='/image/about-1.png' model="widthFix" />
		</view>
		<view class="weui-cell__bd">关于我们</view>
		<view class="weui-cell__ft weui-cell__hd_in-select-after">></view>
	</navigator>
</view>
<view class='weui-cells' wx:if="{{show}}">
	<view class="weui-cell text-center">
		<view class="weui-cell__bd" bindtap="logOut">退出登陆</view>
	</view>
</view>
