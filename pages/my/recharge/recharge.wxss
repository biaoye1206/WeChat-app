.model_body-head {
	margin: 0rpx;
	height: 85%;
	width: 90%;
}

.title-style {
	margin-top: 40rpx;
	height: 80rpx;
  margin-left: 2%;
}

.model_body_lump-head {
	width: 100%;
	height: 240rpx;
	display: flex;
	flex-direction: column;
  color: #1e6eb2;
}

.model_body_lump-last {
	margin-top: 40rpx;
	display: flex;
	width: 100%;
	flex-direction: row;
}

.item_table {
	width: 100%;
	height: 80rpx;
	border: #1e6eb2 solid 2rpx;
	margin: 0 2%;
	border-radius: 10rpx;
}

.money {
	height: 100%;
	width: 100%;
	text-align: center;
	font: 36rpx;
	line-height: 80rpx;
}

.money-select {
	background-color: #1e6eb2;
	color: #FFFFFF;
}


.type {
	border: #C8C8CD solid 2rpx;
	border-radius: 10rpx;
	line-height: 80rpx;
	background-color: #C8C8CD;
	color: #B2B2B2;
}

.model-body-last {
	position: absolute;
	bottom: 0px;
	width: 100%;
	height: 120rpx;
	margin: auto;
}

.pay_acount {
	width: 60%;
	text-align: center;
	height: 100%;
	line-height: 120rpx;
}

.pay_submit {
	width: 40%;
	height: 100%;
}

#grad1 {
	height: 12rpx;
	width: 100%;
	background: linear-gradient(0deg, #C8C8CD, #FFFFFF);
}

.model-body-last-item {
	display: flex;
	flex-direction: row;
	height: 100%;
	width: 100%;
}

.submit {
	background-color: #09BB07;
	width: 280rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	border-radius: 50rpx;
	margin-top: 16rpx;
	color: #FFFFFF;
}
