<!-- 地图模块 -->
<map id="mapCase" scale="{{scale}}" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}"
 bindmarkertap="clickMarker" bindregionchange="regionChange" bindtap="closeInfo" polyline="{{polyline}}" show-location>
	<cover-view class='tooles'>
		<cover-view class='tool'>
			<cover-image class="tooles-image" src="/image/locate-1.png" bindtap='moveToLocation' />
		</cover-view>
		<!--<cover-view style='background-color:#efefef;height:1px;width:100%'>-</cover-view>
		<cover-view class='tool'>
			<cover-image class="tooles-image" src="/image/feedback.png" bindtap='' />
		</cover-view>-->
	</cover-view>
</map>
<cover-view class='service-stn' hidden='{{hiddenInfo}}' bindtap='toNavigate'>
	<cover-view class='flex-col service-info'>
			<cover-view class='flex-row service-title'>
				<cover-image src='/image/info_img1.png' class='service-title_img'/>
				<cover-view class='title-style'>{{info.name}}</cover-view>
			</cover-view>
			<cover-view class='subhead-style'>{{info.address}} | {{info.distance}}</cover-view>
	</cover-view>
  <cover-view class='service-navigate_img'>
			<cover-image src='/image/navigation1.png' bindtap='toNavigate'></cover-image>
		</cover-view>
	<cover-view class='service-line'></cover-view>
	<cover-view class='content-style flex-row service-info'>
		<cover-view class='flex-row'>设备状态：
    <cover-view class='service-status_1' wx:if="{{info.status==1}}">正常</cover-view>
		<cover-view class='service-status_0' wx:elif="{{info.status==0}}">停止</cover-view>
		<cover-view class='service-status_2' wx:else="{{info.status==2}}">异常</cover-view></cover-view>
		<cover-view>服务时间：8:00-22:00</cover-view>
	</cover-view>
</cover-view>
