#mapCase{
  width:100%;
  height:100%
}
 .search-group{
  height: 6%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.search{
  height: 60%;
  width: 90%;
  border-radius: 8px;
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
  background-color:whitesmoke;
  border:1rpx solid whitesmoke;
  margin-top: 3px;
} 

/* 搜索框提示文字样式 */
.search input{
  height: 30px;
  border-radius: 5px;
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
  background-color:whitesmoke;
  border:1rpx solid whitesmoke;
}

/* 搜索框小图标 */
.search-group image
{ 
  width:35rpx;
  height:35rpx;
  padding-right:20rpx;
}

.tooles-image {
  width: 25px;
  height: 25px;
  padding: 5px;
}
.tooles .tool {
  width: 35px;
  height: 35px;
  margin-bottom: 10px;
  float: right;
  display: flex;
 
}
.tooles {
  width: 35px;
  height: 81px;
  float: right;
  margin: 30px 20px 0px 0px;
  align-items: center;
  display: flex;
  flex-direction: column;
  border-radius: 15px;
  background-color: #fff;
}
.server-info {
  border-radius: 10px;
  background-color: #fff;
  height: 120px;
  position: absolute;
  bottom: 5px;
}
.info_img {
  height: 20px;
  width: 20px;
}

.navigate_image {
  width: 35px;
  height: 35px;
  position: absolute;
  right: 15px;
}
