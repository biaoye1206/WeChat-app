/* 页面全局 */
@import "lib/weui.wxss";
page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  color: #2c2c2c;
}
/* 内容字体样式 */
.content-style {
  font-size: 28rpx;
  color: #2c2c2c;
}
/*内容中字体样式*/
.content-medium-style {
  font-size: 30rpx;
  color: #2c2c2c;
}
/* 大标题字体样式 */
.title-style {
  font-size: 36rpx;
  color: #2c2c2c;
}
/*副标题样式*/
.subhead-style{
  font-size: 28rpx;
  color: #959595;
  margin-top: 16rpx;
}
/* 左右排列 */
.flex-row {
  display: flex;
  flex-direction: row;
}
/* 上下排列 */
.flex-col {
  display: flex;
  flex-direction: column;
}
.pay-type{
  text-align:center;
  border:2rpx solid #789;
  border-radius: 10rpx;
}
/*左右居中*/
.element-center{
  margin: auto;
}
.weui-cell image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  display: block;
}
.text-center{
	text-align: center;
}