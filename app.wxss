/* 页面全局 */
@import "/lib/weui.wxss";

page {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

/* page 左右边距5% */

.body-left {
  margin-left: 5%;
  margin-right: 5%;
}

/* 内容字体大小 */

.content-style {
  font-size: 28rpx;
  color: #789;
}

.content-medium-style {
  font-size: 30rpx;
  color: #789;
}

/* 标题字体大小 */

.title-style {
  font-size: 36rpx;
  color: #2c2c2c;
}

/* 颜色:灰 */

.color-content {
  color: #789;
}

.color-title {
  color: #304050;
}

.color-blue {
  background-color: #1296db;
}

/* 左右排列 */

.flex-row {
  display: flex;
  flex-direction: row;
}

/* 上下排列 */

.flex-col {
  display: flex;
  flex-direction: column;
}

/* 100%宽度 */

.width-hundred {
  width: 100%;
}

/* 90%宽度 */

.width-ninety {
  width: 90%;
}

/* 80%宽度 */

.width-eighty {
  width: 80%;
}
.pay-type{
  text-align:center;
  border:2rpx solid #789;
  border-radius: 10rpx;
}
/*左右居中*/
.element-center{
  margin: auto;
}
.weui-cell image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
  display: block;
}
.text-center{
	text-align: center;
}